<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="Theme.Scrabbler" parent="android:Theme.Holo.Light">
    <item name="android:windowBackground">@drawable/scrabbleBitMap</item>
    <item name="android:actionBarStyle">@style/ScrabblerActionBar</item>
  </style>
  <style name="ScrabblerActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:background">#66CD00</item>
    <item name="android:logo">@drawable/sLogo</item>
    <item name="android:displayOptions">useLogo|showHome</item>
  </style>
  <style name="Theme.SplashScreen" parent="android:Theme.Holo.Light">
    <item name="android:windowBackground">@drawable/scrabbleBitMap</item>
    <item name="android:windowNoTitle">true</item>
  </style>
</resources>
